                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:src="@drawable/toero"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/cross_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:src="@drawable/ticcross"
                android:visibility="invisible" />
